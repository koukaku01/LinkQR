{
  "manifest_version": 2,
  "name": "LinkQR",
  "version": "0.8.1",
  "description": "Converts web links into QR codes with a single click from the address bar. Copy or download QR codes in PNG/SVG format for sharing.",
  "homepage_url": "https://github.com/xke00/linkqr/",
  "icons": {
    "32": "icons/ext-icon-32.png",
    "64": "icons/ext-icon-64.png"
  },
  "permissions": [
    "menus",
    "contextMenus",
    "activeTab",
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "icons/PA-icon-19.png",
      "38": "icons/PA-icon-38.png"
    },
    "default_title": "LinkQR",
    "default_popup": "popup/popup.html"
  }
}
