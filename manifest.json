{
  "manifest_version": 2,
  "name": "LinkQR",
  "version": "0.4.1",

  "description": "Converts web links into QR codes with a single click from the address bar. Copy or download QR codes in PNG/SVG format for sharing.",
  "homepage_url": "https://github.com/xke00/linkqr/main",
  "icons": {
    "48": "icons/extension-icon-48.png",
    "96": "icons/extension-icon-48.png"
  },

  "permissions": [
    "menus",
    "contextMenus",
    "activeTab",
    "tabs",
    "clipboardWrite"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "19": "icons/extension-icon-48.png",
      "38": "extension-icon-48.png"
    },
    "default_title": "LinkQR",
    "default_popup": "popup/popup.html"
  }
}
