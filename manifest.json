{
  "manifest_version": 2,
  "name": "LinkQR",
  "version": "0.10.0",
  "description": "Converts web links to QR codes with LinkQR",
  "author": "xKe00",
  "homepage_url": "https://github.com/xke00/linkqr/",
  "icons": {
    "32": "icons/ext-icon-32.png",
    "64": "icons/ext-icon-64.png"
  },
  "permissions": [
    "menus",
    "contextMenus",
    "activeTab",
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "icons/PA-icon-19.png",
      "38": "icons/PA-icon-38.png"
    },
    "default_title": "LinkQR (Alt+Q)",
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Open LinkQR Popup"
    }
  }
}
